Algoritmo "soma_vetor"

Var

   N, i : inteiro
   soma, media : real
   vet : vetor[0..9] de real

Inicio

      soma <- 0
      
      escreva("Quantos números voce vai digitar? ")
      leia(N)
      
      para i de 0 ate N-1 faca
           escreva("Digite um número: ")
           leia(vet[i])
           
           soma <- soma + vet[i]

      fimpara
      
      media <- soma / N

      escreval
      escreva("VALORES = ")
      
      para i de 0 ate N-1 faca
        escreva(vet[i]:3:1, " ")
      fimpara
      
      escreval
      escreval("SOMA = ", soma:2:2)
      escreval("MEDIA = ", media:2:2)


Fimalgoritmo